# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://webshop_user:your_secure_password@localhost:5432/webshop
POSTGRES_DB=webshop
POSTGRES_USER=webshop_user
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:your_redis_password@localhost:6379/0

# Security
SECRET_KEY=your_very_long_and_secure_secret_key_here_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Admin User (will be created automatically)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/app/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# CORS Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# SSL/TLS Settings (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FILE_PATH=/var/log/webshop
